<!-- start home -->
<section id="home">
  <nav class="navbar navbar-default navbar-expand-md navbar-fixed-top templatemo-nav">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>                        
        </button>
        <%= link_to 'JobUp', root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Blog', blog_path %></li>
          <li><%= link_to t('employer.employers'), employers_path %></li>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <p> Hello
                  <%= current_user.first_name %><span class="caret"></span>
                </p>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to t('layouts.header.account_setting'), edit_user_registration_path %></li>
                <% if current_user.user_type == 'candidate' %>
                  <li><%= link_to t('layouts.header.profile'), candidate_path(current_user.candidate) %></li>
                <% elsif current_user.user_type == 'employer' %>
                  <li><%= link_to t('layouts.header.profile'), employer_path(current_user.employer) %></li>
                <% end %>
                  <li><%= link_to t('layouts.header.log_out'), destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to t('layouts.header.log_in'), new_user_session_path %>
            </li>
            <li>
              <%= link_to t('layouts.header.sign_up'), new_user_registration_path %>
            </li>
          <% end %>
          <li><%= link_to image_tag('en.png'), locale:"en" if I18n.locale == :vi %>  </li>
          <li><%= link_to image_tag('vi.png'), locale:"vi" if I18n.locale == :en %>  </li>
        </ul>
      </div>
    </div>
  </nav>
</section>
<!-- end home -->
