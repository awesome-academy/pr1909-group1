<%= simple_form_for(@candidate, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.fields_for :user do |g| %>
      <%= g.hidden_field :id, :value => @candidate.user.id %>
      <strong>First Name:</strong><%= g.text_field :first_name %>
      <strong>Last Name:</strong><%= g.text_field :last_name %>
    <% end %>
    <%= f.input :date_of_birth %>
    <%= f.input :phone %>
    <strong>Avatar</strong> <%= f.file_field :avatar %>
    <strong>CV</strong> <%= f.file_field :cv %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
