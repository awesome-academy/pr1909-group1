<%= simple_form_for(@candidate, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :avatar, as: :file %>

    <%= f.simple_fields_for :user do |g| %>
      <div class="row">
        <div class="col-md-6">
          <%= g.input :first_name, label: t('user.first_name') %> 
        </div>
        <div class="col-md-6">
          <%= g.input :last_name, label: t('user.last_name') %>
        </div>
      </div>
    <% end %>

    <%= f.input :date_of_birth, as: :date, label: t('candidate.dob'), 
                start_year: Date.today.year - 70,end_year: Date.today.year - 17,order: [:day, :month, :year] %>
    <%= f.input :phone, label: t('candidate.phone') %>

    <%= f.input :cv, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
