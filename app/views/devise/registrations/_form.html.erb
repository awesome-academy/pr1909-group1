<div class="form-box">
  <div class="col-md-8 offset-md-2">
    <div class="form" >
      <div class="form-title row">
          <h2><%= t("user.sign_up") %></h2>
        </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :full_name,
                    required: true,
                    input_html: { auto_complete: 'full_name' },
                    label: false do %>
                      <div class="text-box">
                        <i class="fa fa-user"></i>
                        <%= f.input_field :full_name,
                                          placeholder: t("user.full_name") %>
                      </div>
                    <% end %>

          <%= f.input :email,
                      required: true,
                      input_html: { auto_complete: 'email' },
                      label: false do %>
                        <div class="text-box">
                          <i class="fa fa-envelope"></i>
                          <%= f.input_field :email,
                                            placeholder: t("user.email") %>
                        </div>
                      <% end %>
          <%= f.input :password,
                      required: true,
                      label: false do %>
                        <div class="text-box">
                          <i class="fa fa-lock"></i>
                          <%= f.input_field :password,
                                            placeholder: t("user.password"),
                                            input_html: { autocomplete: "new-password" } %>
                        </div>
                      <% end %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: false do %>
                        <div class="text-box">
                          <i class="fa fa-lock"></i>
                          <%= f.input_field :password_confirmation,
                                            placeholder: t("user.password_confirmation"),
                                            input_html: { autocomplete: "new-password" } %>
                        </div>
                      <% end %>

          <%= f.button :submit, t("user.sign_up"), class: "btn btn-success btn-sign-up" %>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
