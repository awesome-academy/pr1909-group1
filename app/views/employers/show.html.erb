<div class="container">

  <div class="row">
    <%= render "layouts/messages" %>
  </div>

  <div class="row">
    <div class="header-profile">
      <div class="col-md-2 col-xs-6">
        <div class="profile-img">
          <%= image_tag @employer.company_logo.url(:show), class: "image" %>
        </div>
      </div>

      <div class="col-md-8 col-xs-6">
        <div class="info-general">
          <h1 class="name">
            <%= @employer.company_name %>
          </h1>

          <div class="company-size">
            <i class="fa fa-users" aria-hidden="true"></i>
            <%= @employer.company_size %>
          </div>

          <div class="working-date">
            <i class="fa fa-calendar" aria-hidden="true"></i>
            <span><%= t('employer.show.day') %> </span>
          </div>
        </div>
      </div>

      <div class="col-md-2 col-xs-12">
        <div class="btn-edit">
          <% if user_signed_in? && current_user.id == @employer.user_id %>
            <%= link_to t('common.edit'), edit_employer_path(@employer), class: "btn btn-primary  btn-block" %>
            <%= link_to t('job_post.new_job'), new_job_post_path,  class: "btn btn-danger btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="main-profile">

      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item show active">
          <a class=" nav-link active" id="overview-tab" data-toggle="tab" href="#overview" role="tab">
            <%= t('employer.show.overview') %>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="job-tab" data-toggle="tab" href="#job" role="tab">
            <%= t('employer.show.job') %>
          </a>
        </li>
      </ul>

      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade active in" id="overview" role="tabpanel">
          <div class="company-description">
              <h4><%= t('employer.description') %></h4>
              <%= raw(@employer.company_description) %>
          </div>
        </div>

        <div class="tab-pane fade" id="job" role="tabpanel">
          <div class="company-jobs" id="job-posts">
            <%= render :partial => "job_posts/card_employer_show" %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
