<p id="notice"><%= notice %></p>

<h1>Job Posts</h1>

<%= search_form_for(@q) do |f| %>
  <%= f.label t('search.label') %>
  <%= f.search_field :post_title_cont %>
  <%= f.select :job_location_eq,
               Settings.job_location.search.to_h,
               prompt: t('job_post.location'),
               include_blank: true %>
  <%= f.select :job_type_eq,
               Settings.job_type.search.to_h,
               prompt: t('job_post.job_type'),
               include_blank: true %>
  <%= f.select :salary_min_gteq,
               Settings.salary_min.to_a,
               prompt: t('job_post.salary_min'),
               include_blank: true %>
  <%= f.select :salary_max_lteq,
               Settings.salary_max.to_a,
               prompt: t('job_post.salary_max'),
               include_blank: true %>
  <%= f.submit t('search.btn_search')%>
<% end %>

  <%= render "job_posts/card" %>

<div class="paginate">
  <%= will_paginate @candidate %>
</div>
<br>
<% if is_employer? %>
  <%= link_to t('job_post.new_job'), new_job_post_path %>
<% end %>
