<p id="notice"><%= notice %></p>

<p>
  <strong>Employer:</strong>
  <%= @job_post.employer.user.first_name %>
</p>

<p>
  <strong>Post title:</strong>
  <%= @job_post.post_title %>
</p>

<p>
  <strong>Job location:</strong>
  <%= JobPost.job_location_views.key(@job_post.job_location) %>
</p>

<p>
  <strong>Job type:</strong>
  <%= Settings.job_type.view.to_h.key(@job_post.job_type) %>
</p>

<p>
  <strong>Salary:</strong>
  <%= @job_post.salary_min %>
  -
  <%= @job_post.salary_max %>
</p>

<p>
  <strong>Job description:</strong>
  <%= @job_post.job_description %>
</p>

<p>
  <strong>Job expired date:</strong>
  <%= @job_post.job_expired_date %>
</p>

<% if current_user.employer.id == @job_post.employer.id %>
   | <%= link_to "Edit", edit_job_post_path(@job_post) %>
<% end %>
