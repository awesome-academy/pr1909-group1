<div class="container">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-md-6 offset-md-3">
      <div class="form-login-admin">
        <h1><%= t("layouts.header.log_in")%> </h1>
        <%= render "layouts/messages" %>
        <%= simple_form_for(resource, url: { controller: :sessions, action: :create}) do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, required: true, placeholder: t("layouts.footer.email") %>
          <%= f.input :password, required: true, placeholder: t("user.password") %>
          <%= f.submit t("layouts.header.log_in"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
